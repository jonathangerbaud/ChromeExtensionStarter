{
    "name": "Hello, World!",
    "description": "Simple sample extension",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "service-worker.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png"
        },
        "default_title": "Tooltip to display when hovering the extension icon",
        "default_popup": "popup/popup.html"
    },
    "options_page": "settings/settings.html",
    "content_scripts": [
        {
            "matches": [
                "https://mywebsite.com/page1",
                "https://mywebsite.com/users/*"
            ],
            "all_frames": true,
            "js": [
                "content-script.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "host_permissions": [
        "https://mywebsite.com/api/*"
    ]
}